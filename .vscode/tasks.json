{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Backend",
            "type": "shell",
            "command": "npm run dev",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "nodemon",
                        "endsPattern": "Server is running"
                    }
                }
            ],
            "presentation": {
                "group": "server",
                "reveal": "always"
            }
        },
        {
            "label": "Run Frontend",
            "type": "shell",
            "command": "npm run dev",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "VITE",
                        "endsPattern": "Local:"
                    }
                }
            ],
            "presentation": {
                "group": "server",
                "reveal": "always"
            }
        },
        {
            "label": "Run DecentraNews (All)",
            "dependsOn": [
                "Run Backend",
                "Run Frontend"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}